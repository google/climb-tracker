<android.support.design.widget.CoordinatorLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ClimbSessionListActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/climbsession_list"
        android:name="fr.steren.climbtracker.ClimbSessionListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@android:layout/list_content" />

    <!-- for borderWidth and elevation, see
    http://stackoverflow.com/questions/30552353/android-design-support-library-floatingactionbuton-fab-displaying-correctly-o -->
    <android.support.design.widget.FloatingActionButton
        app:borderWidth="0dp"
        app:elevation="4dp"
        android:layout_margin="8dp"

        android:id="@+id/fab"
        android:src="@drawable/ic_add_black_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom" />

</android.support.design.widget.CoordinatorLayout>